{
  "builders": [{
    "boot_command": [
      "<esc><wait>",
      "install <wait>",
      "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg <wait>",
      "debian-installer=en_US <wait>",
      "auto <wait>",
      "net.ifnames=0 <wait>",
      "biosdevname=0 <wait>",
      "locale=en_US <wait>",
      "kbd-chooser/method=us <wait>",
      "keyboard-configuration/xkb-keymap=us <wait>",
      "netcfg/choose_interface=eth0 <wait>",
      "netcfg/get_hostname={{ user `hostname` }} <wait>",
      "netcfg/get_domain=zproxmox.lab <wait>",
      "fb=false <wait>",
      "debconf/frontend=noninteractive <wait>",
      "console-setup/ask_detect=false <wait>",
      "console-keymaps-at/keymap=us <wait>",
      "<enter><wait>"
    ],
    "boot_wait": "10s",
    "disk_additional_size": [
      "10240",
      "10240"
    ],
    "disk_size": 51200,
    "disk_type_id": "thin",
    "format": "ovf",
    "headless": false,
    "http_directory": "http",
    "iso_checksum": "{{ user `iso_checksum_type` }}:{{ user `iso_checksum` }}",
    "iso_url": "{{ user `iso_url` }}",
    "name": "{{ user `vm_name` }}",
    "ovftool_options": "--noImageFiles",
    "remote_datastore": "{{ user `builder_host_datastore` }}",
    "remote_host": "{{ user `builder_host` }}",
    "remote_password": "{{ user `builder_host_password` }}",
    "remote_type": "esx5",
    "remote_username": "{{ user `builder_host_username` }}",
    "shutdown_command": "/sbin/shutdown -Ph now",
    "shutdown_timeout": "30s",
    "insecure_connection": true,
    "vnc_over_websocket": true,
    "skip_compaction": true,
    "ssh_password": "{{ user `guest_password` }}",
    "ssh_port": 22,
    "ssh_timeout": "60m",
    "ssh_username": "{{ user `guest_username` }}",
    "type": "vmware-iso",
    "version": 14,
    "vm_name": "{{ user `vm_name` }}",
    "vmdk_name": "{{ user `vm_name` }}-disk0",
    "vmx_data": {
      "ethernet0.addressType": "generated",
      "ethernet0.networkName": "{{ user `builder_host_portgroup` }}",
      "ethernet0.present": "TRUE",
      "ethernet0.startConnected": "TRUE",
      "ethernet0.virtualDev": "vmxnet3",
      "ethernet0.wakeOnPcktRcv": "FALSE",
      "ethernet1.addressType": "generated",
      "ethernet1.networkName": "{{ user `builder_host_portgroup` }}",
      "ethernet1.present": "TRUE",
      "ethernet1.startConnected": "TRUE",
      "ethernet1.virtualDev": "vmxnet3",
      "ethernet1.wakeOnPcktRcv": "FALSE",
      "ethernet2.addressType": "generated",
      "ethernet2.networkName": "{{ user `builder_host_portgroup` }}",
      "ethernet2.present": "TRUE",
      "ethernet2.startConnected": "TRUE",
      "ethernet2.virtualDev": "vmxnet3",
      "ethernet2.wakeOnPcktRcv": "FALSE",
      "ethernet3.addressType": "generated",
      "ethernet3.networkName": "{{ user `builder_host_portgroup` }}",
      "ethernet3.present": "TRUE",
      "ethernet3.startConnected": "TRUE",
      "ethernet3.virtualDev": "vmxnet3",
      "ethernet3.wakeOnPcktRcv": "FALSE",
      "hypervisor.cpuid.v0": "FALSE",
      "vhv.enable": "TRUE",
      "memsize": "{{ user `ramsize` }}",
      "numvcpus": "{{ user `numvcpus` }}"
    },
    "vnc_disable_password": true
  }],
  "post-processors": [{
    "environment_vars": [
      "APPLIANCE_NAME={{ user `vm_name` }}",
      "APPLIANCE_VERSION={{ user `version` }}",
      "APPLIANCE_OVA={{ user `vm_name` }}_{{user `version`}}"
    ],
    "inline": [
      "cd postprocess-ova-properties",
      "./add_ovf_properties.sh"
    ],
    "type": "shell-local"
  }],
  "provisioners": [
    {
      "destination": "/etc/systemd/system/zproxmox-init.service",
      "source": "files/zproxmox-init.service",
      "type": "file"
    },
    {
      "destination": "/sbin/zproxmox-init.sh",
      "source": "files/zproxmox-init.sh",
      "type": "file"
    },
    {
      "type": "shell",
      "environment_vars": ["DEBIAN_FRONTEND=noninteractive"],
      "scripts": [
        "scripts/zproxmox-update.sh",
        "scripts/zproxmox-apt.sh",
        "scripts/zproxmox-system.sh",
        "scripts/zproxmox-network.sh",
        "scripts/zproxmox-storage.sh",
        "scripts/zproxmox-settings.sh",
        "scripts/zproxmox-shell.sh",
        "scripts/zproxmox-vmware.sh"
      ]
    },
    {
      "type": "shell",
      "environment_vars": ["DEBIAN_FRONTEND=noninteractive"],
      "scripts": [
        "scripts/zproxmox-proxmox-repo.sh",
        "scripts/zproxmox-proxmox-kernel.sh"
      ]
    },
    {
      "type": "shell",
      "environment_vars": ["DEBIAN_FRONTEND=noninteractive"],
      "inline": ["echo 'Rebooting into Proxmox kernel...' && sleep 5 && reboot"],
      "expect_disconnect": true
    },
    {
      "type": "shell",
      "environment_vars": ["DEBIAN_FRONTEND=noninteractive"],
      "pause_before": "30s",
      "scripts": [
        "scripts/zproxmox-proxmox-packages.sh",
        "scripts/zproxmox-proxmox-cleanup.sh",
        "scripts/zproxmox-cleanup.sh"
      ]
    },
    {
      "destination": "/usr/share/poshthemes/zproxmox.omp.json",
      "source": "files/zproxmox.omp.json",
      "type": "file"
    },
    {
      "destination": "/etc/skel/.zshrc",
      "source": "files/zshrc",
      "type": "file"
    },
    {
      "destination": "/etc/skel/.tmux.conf",
      "source": "files/tmux.conf",
      "type": "file"
    },
    {
      "destination": "$HOME/.zshrc",
      "source": "files/zshrc",
      "type": "file"
    },
    {
      "destination": "$HOME/.tmux.conf",
      "source": "files/tmux.conf",
      "type": "file"
    },
    {
      "destination": "/usr/local/bin/pve-remove-nag.sh",
      "source": "files/pve-remove-nag.sh",
      "type": "file"
    },
    {
      "destination": "/etc/apt/apt.conf.d/99-pve-remove-nag",
      "source": "files/99-pve-remove-nag",
      "type": "file"
    },
    {
      "type": "shell",
      "scripts": [
        "scripts/zproxmox-firstboot.sh"
      ]
    }
  ]
}
